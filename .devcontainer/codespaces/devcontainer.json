{
  "name": "monaka",
  "dockerComposeFile": [
    "../../compose.codespaces.yml"
  ],
  "service": "monaka",
  "workspaceFolder": "/workspaces/monaka",
  "shutdownAction": "stopCompose",
  "remoteEnv": {
    "NODE_ENV": "development"
  },
  "customizations": {
    "vscode": {
      "settings": {
        "breadcrumbs.enabled": true,
        "editor.minimap.enabled": false,
        "editor.cursorBlinking": "smooth",
        "editor.cursorSmoothCaretAnimation": "on",
        "editor.fontLigatures": true,
        "editor.fontSize": 11,
        "editor.tabSize": 2,
        "editor.renderLineHighlight": "all",
        "editor.renderWhitespace": "all",
        "editor.renderControlCharacters": true,
        "editor.formatOnPaste": true,
        "editor.formatOnSave": true,
        "editor.formatOnType": true,
        "editor.bracketPairColorization.enabled": true,
        "editor.stickyScroll.enabled": true,
        "editor.suggestSelection": "first",
        "editor.wordWrapColumn": 120,
        "files.insertFinalNewline": true,
        "files.trimFinalNewlines": true,
        "files.trimTrailingWhitespace": true,
        "files.autoGuessEncoding": true,
        "terminal.integrated.profiles.linux": {
          "bash": {
            "path": "/bin/bash",
            "args": []
          }
        },
        "terminal.integrated.defaultProfile.linux": "bash",
        "workbench.iconTheme": "vscode-icons",
        "workbench.colorTheme": "Default Dark Modern",
        "workbench.startupEditor": "newUntitledFile",
        "workbench.editor.enablePreview": false,
        "notebook.codeActionsOnSave": {
          "source.organizeImports": "explicit",
          "source.fixAll.eslint": "explicit",
          "source.fixAll.stylelint": "explicit"
        }
      },
      "extensions": [
        "ms-ceintl.vscode-language-pack-ja",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "stylelint.vscode-stylelint",
        "pranaygp.vscode-css-peek",
        "streetsidesoftware.code-spell-checker",
        "mechatroner.rainbow-csv",
        "yzhang.markdown-all-in-one",
        "vscode-icons-team.vscode-icons",
        "bierner.markdown-preview-github-styles",
        "github.copilot",
        "github.copilot-chat",
        "orta.vscode-jest",
        "ms-playwright.playwright"
      ]
    }
  },
  "portsAttributes": {
    "3000": {
      "label": "Monaka Remote",
      "onAutoForward": "notify"
    }
  },
  "initializeCommand": "echo 'Initializing'",
  "onCreateCommand": "echo 'onCreate'",
  "updateContentCommand": "echo 'updateContent'",
  "postCreateCommand": "echo postCreate",
  "postStartCommand": "echo 'postStart'",
  "postAttachCommand": "echo 'postAttach'",
  "features": {
    "ghcr.io/devcontainers/features/github-cli:1": {
      "version": "latest"
    }
  }
}
